<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="text_tweet">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="text_username">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/username_text_size</item>
    </style>

    <style name="text_name">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">Roboto-Medium.ttf</item>
    </style>

    <style name="text_very_small">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="text_extremely_small">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="text_action">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
